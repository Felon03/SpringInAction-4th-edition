<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="pricingEngine"
          class="com.springinaction.pizza.service.PricingEngineImpl"/>

    <bean id="customerService"
          class="com.springinaction.pizza.service.CustomerServiceImpl" />

    <bean id="paymentProcessor"
          class="com.springinaction.pizza.service.PaymentProcessor" />

    <bean id="orderService"
          class="com.springinaction.pizza.service.OrderServiceImpl" />
</beans>